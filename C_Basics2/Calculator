        d = a - b;
        printf("%f - %f = %f", a, b, d);
    } else if (c == '/') {
        d = a / b;
        printf("%f / %f = %f", a, b, d);
    } else if (c == '*') {
        d = a * b;
        printf("%f * %f = %f", a, b, d);
    } else {
        printf("Enter a correct operand!");
    }

