#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int a,i,sum=1;
	printf("Enter an integer number:\n");
	scanf("%d",&a);
	if(a>0){
	for( i=1;i<=a;i++){
		sum*=i;
	}
	printf("Factorial of %d = %d\n",a,sum);
	}
	else if(a<0){
		printf("Factorial of negative number doesn't exist!");
	}
	else{
		printf("Factorial of 0=0");
	}
	return EXIT_SUCCESS;
}
