#include <stdio.h>
#include <stdlib.h>

int main(void) {
    int n;
    float avg=0.0;


    printf("Enter the number of data: ");
       fflush(stdout);
       scanf("%d", &n);
float arr1[n];
    for (int i = 0; i < n; i++) {
        printf("Enter number %d: ", i+1 );
        fflush(stdout);
        scanf("%f", &arr1[i]);

    }

    for(int i=0;i<n;i++){
    	avg+=arr1[i];

    }
    avg/=n;
    printf("Average of array = %f",avg);

    return 0;
}
